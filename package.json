{
  "name": "packetreader",
  "displayName": "PacketReader",
  "description": "reads packet capture files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "packetDetails",
          "title": "Packet Details",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "packetDetails": [
        {
          "id": "packetDetails.detailsView",
          "name": "Packet Details",
          "type": "webview"
        }
      ]
    },
    "customEditors": [
			{
				"viewType": "packetreader.pcap",
				"displayName": "pcap file",
				"selector": [
					{
						"filenamePattern": "{*.pcap,*.pcapng}"
					}
				]
			}
		],
    "commands": [
			{
				"command": "packetDetails.addColor",
				"category": "Calico Colors",
				"title": "Add Color"
			},
			{
				"command": "packetDetails.clearColors",
				"category": "Calico Colors",
				"title": "Clear Colors",
				"icon": "$(clear-all)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "packetDetails.clearColors",
					"group": "navigation",
					"when": "view == packetDetails.detailsView"
				}
			]
		}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "lint": "eslint \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    
    "ip-address": "^9.0.5"
  }
}
